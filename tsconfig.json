{
    "compilerOptions": {
        "target": "es5",
        "module": "es6",
        "allowJs": true,
        "strict": true,
        "noImplicitAny": true,
        "sourceMap": false,
        "skipLibCheck": true,
        "noEmitHelpers": true,
        "importHelpers": true,
        "allowUnreachableCode": true,
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "removeComments": false,
        "declaration": true,
        "lib": [
            "es2017",
            "dom"
        ],
        "typeRoots": [
            "node_modules/@types"
        ],
        "outDir": "./dist",
        "baseUrl": "./",
        "strictNullChecks": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": false,
        "noFallthroughCasesInSwitch": false,
        "moduleResolution": "node"
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "test",
        "resources"
    ]
}
